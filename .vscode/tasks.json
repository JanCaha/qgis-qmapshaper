    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Pytest tests",
            "type": "shell",
            "command": "pytest tests --cov=qmapshaper --cov-report=term-missing:skip-covered -rP -vv -p no:xvfb",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Show website",
            "type": "shell",
            "command": "mkdocs serve --config-file ./website/mkdocs.yml",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}